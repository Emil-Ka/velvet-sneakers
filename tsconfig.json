{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "dom"],
    "jsx": "react-jsx",
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "include": [
    "src",
    "file-declaration.d.ts"
  ],
  "ts-node": {
    "files": true
  },
}
